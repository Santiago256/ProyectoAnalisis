@model ProyectoAnalisis.Models.Usuario;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Acme&family=Lora:wght@700&family=Montserrat:wght@900&family=Poppins:wght@900&display=swap" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .img {
            position: fixed;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1; /* Coloca la imagen detrás de los demás elementos */
        }

            .img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .container {
            z-index: 1; /* Asegura que los elementos dentro del contenedor estén encima de la imagen */
        }

        .mt-4-custom {
            margin-top: 4rem; /* Ajusta el valor según tus necesidades */
        }

        .negrita-poppins {
            color: #00131A;
            font-family: 'Poppins', sans-serif;
            font-weight: 900;
            font-size:30px;
            background-color: #A1E3F2;
            text-align: center;
        }

        .card {
            background-color: #DCEEF2;
            font-family: 'Lora', sans-serif;
        }

        .btn-primary {
            background-color: #8CC6FF; /* Cambia el color del botón a #8EFFFF */
            color: #000000; /* Cambia el color del texto del botón */
        }

        .btn-secondary{
            background-color: #90EE90;
            color: #000000;
        }

        .btn-secondary:hover {
                background-color: #5dd55d;
            color: #ffffff;
        }
    </style>
</head>

<body>

 
        <div class="img">
            <img src="~/Img/forest-scenery-in-autumn-season-free-vector.jpg">
        </div>



    <div class="row justify-content-center mt-6">
            <div class="col-12 col-xl-4 col-md-6">

            <div class="card mt-4-custom">
                <div class="card-header negrita-poppins">
                    Registrate
                </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="Nombre" required />
                            <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="CorreoElectronico" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Contraseña" />
                            <div class="form-group">
                                <input type="hidden" asp-for="Rol" value="Estudiante" />

                               <input class="form-control mb-3" type="text" placeholder="Dirección" required asp-for="Direccion" />
                               <input type="hidden" asp-for="Id" />
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrate</button>
                            <button class="btn btn-secondary" type="reset">Reiniciar</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
