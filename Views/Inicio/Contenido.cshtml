@{
    ViewData["Title"] = "Contenido";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu Página</title>
</head>

<style>
    .banner-image {
        background-image: url('@Url.Content("~/Img/pexels-pixabay-256417.jpg")');
        background-size: cover;
    }

    .navbar {
        background-color: #E1D6D4;
        margin-left: -145px !important;
        height: 70px;
    }

    h1 {
        text-decoration: none;
        color: #73020C;
        font-weight: 900;
        font-family: 'Poppins', sans-serif;
        margin-top: 20px;
    }

    .dropdown-item:hover,
    .dropdown-item:focus {
        background-color: #143163;
        border: none;
        color: white;
    }

    .btn-secondary:hover,
    .btn-secondary:focus {
        background-color: #143163;
    }

    #dropdownMenuButton:hover,
    #dropdownMenuButton:active,
    #dropdownMenuButton:focus {
        background-color: #143163;
        color: white;
    }

    .carousel {
        width: 100%;
    }

    .carousel-inner {
        width: 100%;
    }

    .carousel-item img {
        width: 100%;
        object-fit: cover;
      
    }


    h5{
        color: #000000; /* Cambia el color del texto a negro */
        font-family: 'Lora', serif; /* Usa la fuente Lora */
        font-weight:bold;
        font-size:22px;
    }

    p {
        color: #000000; /* Cambia el color del texto a negro */
        font-family: 'Lora', serif; /* Usa la fuente Lora */
        font-size: 16px;
    }

</style>
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Img/6840312.jpg" class="d-block mx-auto" alt="Presente Simple">
            <div class="carousel-caption d-none d-md-block">
                <h5>Presente Simple</h5>
                <p>Descripción o contenido relacionado con el presente simple.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/Img/chico.png" class="d-block mx-auto" alt="Pasado Simple">
            <div class="carousel-caption d-none d-md-block">
                <h5>Pasado Simple</h5>
                <p>Descripción o contenido relacionado con el pasado simple.</p>
            </div>
        </div>
        <!-- Agrega más elementos según sea necesario -->
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
